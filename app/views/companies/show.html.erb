<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @company.name %>
</p>

<h4>Phone Numbers</h4>
<% if @company.phone_numbers.exists? %>
<ul>
	<% @company.phone_numbers.each do |phone| %>
		<li><%= phone.number %> <%= link_to('Edit Number', edit_phone_number_path(phone)) %> <%= link_to "Delete Number", phone_number_path(phone), method: :delete %></li>
	<% end %>
</ul>
<% else %>
<p>No phone numbers yet.</p>
<% end %>

<h4>Email Addresses</h4>
<% if @company.email_addresses.exists? %>
<ul>
	<% @company.email_addresses.each do |email| %>
		<li><%= email.address %> <%= link_to('Edit Address', edit_email_address_path(email)) %> <%= link_to "Delete Address", email_address_path(email), method: :delete %></li>
	<% end %>
</ul>
<% else %>
<p>No email addresses yet.</p>
<% end %>

<%= link_to 'Add phone number', new_phone_number_path(contact_id: @company.id, contact_type: 'Company') %> | 
<%= link_to 'Add email address', new_email_address_path(contact_id: @company.id, contact_type: 'Company') %> | 

<%= link_to 'Edit', edit_company_path(@company) %> |
<%= link_to 'Back', companies_path %>
