%h1 Listing people
%table
  %thead
    %tr
      %th Name
      %th
      %th
      %th
  %tbody
    - @people.each do |person|
      %tr
        %td= person.full_name
        %td
          %ul.actions
            %li= link_to 'Show', person
            %li= link_to 'Edit', edit_person_path(person)
            %li= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Person', new_person_path, id: "new_person"
| 
= link_to 'Go Home', root_path
