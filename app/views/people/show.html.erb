<p id="notice"><%= notice %></p>

<p>
  <strong>First name:</strong>
  <%= @person.first_name %>
</p>

<p>
  <strong>Last name:</strong>
  <%= @person.last_name %>
</p>

<h4>Phone Numbers</h4>
<% if @person.phone_numbers.exists? %>
<ul>
	<% @person.phone_numbers.each do |phone| %>
		<li><%= phone.number %> <%= link_to('Edit Number', edit_phone_number_path(phone)) %> <%= link_to "Delete Number", phone_number_path(phone), method: :delete %></li>
	<% end %>
</ul>
<% else %>
<p>No phone numbers yet.</p>
<% end %>

<h4>Email Addresses</h4>
<% if @person.email_addresses.exists? %>
<ul>
	<% @person.email_addresses.each do |email| %>
		<li><%= email.address %> <%= link_to('Edit Address', edit_email_address_path(email)) %> <%= link_to "Delete Address", email_address_path(email), method: :delete %></li>
	<% end %>
</ul>
<% else %>
<p>No email addresses yet.</p>
<% end %>


<%= link_to 'Add phone number', new_phone_number_path(contact_id: @person.id, contact_type: 'Person') %> | 
<%= link_to 'Add email address', new_email_address_path(contact_id: @person.id, contact_type: 'Person') %> | 

<%= link_to 'Edit', edit_person_path(@person) %> |
<%= link_to 'Back', people_path %>
